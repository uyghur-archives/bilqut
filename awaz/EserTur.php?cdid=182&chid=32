			$html=$html.'<td width="6%" align="center" style="font-weight:bold;"><span class="numur">'.shownumber($i).'</span></td>';
			$html=$html.'</tr>';
		}
		$html=$html.'<tr>';	
		$html=$html.'</table>';
  		$db->free_result($result);
		return $html;
	}	
